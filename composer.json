{
    "name": "cuongnx/laravel-flexible-otp",
    "description": "A flexible OTP (One-Time Password) library for Laravel, supporting multi-purpose configurations, multi-storage (MongoDB/MySQL), resend cooldown, hashing for security, and optional sending via providers like Zalo ZNS, SpeedSMS, or mail.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "otp",
        "one-time-password",
        "authentication",
        "2fa",
        "multi-factor",
        "mongodb",
        "mysql",
        "zalo-zns",
        "speedsms"
    ],
    "autoload": {
        "psr-4": {
            "CuongNX\\LaravelFlexibleOtp\\": "src/"
        }
    },
    "authors": [
        {
            "name": "CuongNX",
            "email": "xuancuong220691@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "CuongNX\\LaravelFlexibleOtp\\OtpServiceProvider"
            ],
            "aliases": {
                "Otp": "CuongNX\\LaravelFlexibleOtp\\Facades\\Otp"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}